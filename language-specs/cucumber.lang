<language id="cucumber" _name="Cubumber Plain Text" version="2.0" _section="Other">
  <metadata>
    <property name="mimetypes">text/x-cucumber</property>
    <property name="globs">*.feature</property>
    <property name="line-comment-start">#</property>
  </metadata>

  <styles>
    <style id="keyword"              _name="Keyword"               map-to="def:keyword"/>
    <style id="string"               _name="String"                map-to="def:string"/>
  </styles>

  <definitions>
    <context id="string" style-ref="string">
      <start>"</start>
      <end>"</end>
      <include>
        <context ref="def:escape"/>
        <context ref="def:line-continue"/>
      </include>
    </context>

    <context id="string-2" style-ref="string">
      <start>'</start>
      <end>'</end>
    </context>

    <context id="key-en" style-ref="keyword">
      <match>^\s*(Feature|In\s[Oo]rder|As\san?|I\s[Ww]ant|Scenario(\sOutline)?|Given|When|Then|And|But|Background|Examples)</match>
    </context>

    <context id="key-es" style-ref="keyword">
      <match>^\s*(Característica|Para|Como\s[Uu]n|Quiero|Escenario|Esquema\sdel\sescenario|Dado|Cuando|Entonces|Y|Pero|Antecedentes|Ejemplos)</match>
    </context>

    <context id="key-pt" style-ref="keyword">
      <match>^\s*(Característica|Funcionalidade|Para|Como\s[Uu]m|Eu\s[Qq]uero|Cenário|Dado|Quando|Então|E|Mas|Contexto)</match>
    </context>
    
    <context id="key-pl" style-ref="keyword">
      <match>^\s*(Właściwość|Założenia|(Szablon\s)?[Ss]cenariusza?|Przykałdy|Zakładając|Mając|Jeżeli|Jeśli|Wtedy|Oraz|I|Ale)</match>
    </context>

    <context id="cucumber">
      <include>
        <context ref="string"/>
        <context ref="string-2"/>
        <context ref="key-en"/>
        <context ref="key-es"/>
        <context ref="key-pt"/>
      </include>
    </context>

  </definitions>
</language>

